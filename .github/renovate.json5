{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "config:best-practices",
    "default:pinDigestsDisabled",
  ],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    schedule: ["* 12 * * 0"],
  },
  timezone: "Etc/UTC",
  schedule: ["* 12 * * 0"],
  enabledManagers: ["custom.regex", "nix", "github-actions"],
  prConcurrentLimit: 0,
  prHourlyLimit: 0,
  prCreation: "immediate",
  automerge: true,
  platformAutomerge: true,
  nix: {
    enabled: true,
  },
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["/systems-linux/(.*)/configuration\\.nix$/"],
      matchStrings: ['image = "v?(?<depName>.*?):(?<currentValue>.*?)";'],
      datasourceTemplate: "docker",
      depTypeTemplate: "container",
      depNameTemplate: "{{depName}}",
      packageNameTemplate: "{{depName}}",
      versioningTemplate: "loose",
    },
  ],
  packageRules: [
    {
      matchManagers: ["github-actions", "nix"],
      matchUpdateTypes: ["major", "minor", "patch", "pin"],
      automerge: true,
    },
    {
      matchCategories: ["docker"],
      enabled: true,
      pinDigests: false,
      automerge: false,
    },
    {
      matchDatasources: ["docker"],
      versioning: "regex:^trixie-latest-build-(?<major>\\d+)$",
      matchPackageNames: [
        "/^ghcr\\.io/sdr-enthusiasts/(docker-acarsdec|docker-dumphfdl|airspy_adsb|docker-dump978|docker-adsbhub|docker-flightradar24|docker-planefinder|docker-radarvirtuel|docker-opensky-network|docker-sdrmap|docker-acarshub|acars_router|docker-dumpvdl2)$/",
      ],
      pinDigests: false,
      automerge: false,
    },
    {
      matchDatasources: ["docker"],
      versioning: "regex:^latest-build-(?<major>\\d+)$",
      matchPackageNames: [
        "/^ghcr\\.io/sdr-enthusiasts/(docker-hfdlobserver|docker-adsb-ultrafeeder|docker-piaware|docker-airnavradar)$/",
      ],
      pinDigests: false,
      automerge: false,
    },
    {
      matchDatasources: ["docker"],
      versioning: "regex:^(trixie-)?latest-build-(?<major>\\d+)?$",
      matchPackageNames: ["ghcr.io/rpatel3001/{/,}**"],
      pinDigests: false,
      automerge: false,
    },
    {
      matchDatasources: ["docker"],
      versioning: "regex:^(trixie-)?latest-build-(?<major>\\d+)?$",
      matchPackageNames: ["ghcr.io/plane-watch/{/,}**"],
      pinDigests: false,
      automerge: false,
    },
    {
      matchDatasources: ["docker"],
      matchPackageNames: ["amir20/dozzle"],
      pinDigests: false,
      automerge: false,
    },
  ],
}
