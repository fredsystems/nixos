{
  lib,
  pkgs,
  config,
  user,
  extraUsers ? [ ],
  ...
}:
with lib;
let
  allUsers = [ user ] ++ extraUsers;
  cfg = config.desktop.vscode;
in
{
  options.desktop.vscode = {
    enable = mkOption {
      description = "Enable Visual Studio Code.";
      default = false;
    };
  };

  config = mkIf cfg.enable {
    users.users = lib.genAttrs allUsers (_: {
      packages = with pkgs; [
        vscode
      ];
    });
  };
}
